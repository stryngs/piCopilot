cat >> /etc/systemd/system/mosh-server.service <<EOF
[Unit]
Description=Mosh Service

[Service]
ExecStart=/usr/bin/mosh-server

[Install]
WantedBy=multi-user.target
EOF
systemctl enable mosh-server
